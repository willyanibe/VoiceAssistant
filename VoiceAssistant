import os
import time
import playsound
import speech_recognition as sr
from gtts import gTTS

#This function contains code that initialize the text to speech engine (gtts) and assigns a voice and language to it
def speak(text):
    tts = gTTS(text=text, lang="en")
    filename = "voice.mp3"
    tts.save(filename)
    playsound.playsound(filename)

#This function gets and recognizes human voice from the noise using the speechrecognition library. It also throws an error
#when it cannot recognize a voice
def get_audio():
    r = sr.Recognizer()
    with sr.Microphone() as source:
        audio = r.listen(source)
        said = ""

        try:
            said = r.recognize_google(audio)
            print(said)
        except Exception as e:
            print("Exception: " + str(e))

    return said

text = get_audio()

if "hello" in text:
    speak("hello, how are you?")
elif "what is your name" in text:
    speak("My name is Wilson")

#get_audio()